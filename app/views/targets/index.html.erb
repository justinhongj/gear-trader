<h1> <%= current_user.username %> </h1>

<p>Location: <%= current_user.state %>, <%= current_user.city %> </p>
<p>Trade Rating: <%= current_user.rating %> </p>


<div>
	<h2>My Posts</h2>
	<% @posts.each do |post| %>	
		<div>
			<p> <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %> | <%= link_to "Edit", edit_post_path(post) %> | <%= link_to post.title, post_path(post) %> </p>
			<p> <%= post.created_at %> | <%= post.status %> </p>
		</div>
	<% end %>
</div>

<div>
	<h2>Watching</h2>
	<% @watches.each do |watch| %>
		<div>
			<%= Post.find_by(id: watch.post_id).title %>
			<%= Post.find_by(id: watch.post_id).created_at %>
			<%= Post.find_by(id: watch.post_id).status %>
		</div>
	<% end %>
</div>