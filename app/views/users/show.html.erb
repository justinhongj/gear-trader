<div class="container">
	<h1> <%= @user.username %> </h1>
	<p>Location: <%= @user.city %>, <%= @user.state %> </p>
	<p>Trade Rating: <%= @user.rating %> </p>
	<%= button_to "Send Message", {:controller => 'chats', :action => 'create', :user_id => @user.id}, :method => :post %>

	<h3><%= @user.username %>'s Posts</h3>
	<% @posts.each do |post| %>
		<div class="post-summary">
			<%= link_to post.title, post_path(post) %><br>
			<%= Category.find_by(id: post.category_id).full_name %> |
			<%= post.created_at %> |
			<% if post.status == 'Available' %>
				<span class="text-success"><%= post.status %></span>
			<% else %>
				<span class="text-danger"><%= post.status %></span>
			<% end %>
		</div>
	<% end %>
</div>