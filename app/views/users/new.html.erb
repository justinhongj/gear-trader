<div class="page-header">
      <h1>Register</h1>
</div>
<br>

<%= form_for@user, :html => {class: "form-inline"}, url: create_user_path do |f| %>

      <% flash.each do |key,value|  %>
        <div class="<%= key %>" > <%= value %> </div>
      <% end %>

      <%= f.text_field :username, placeholder: "Username" %>

      <%= f.text_field :address, placeholder: "Street Address" %>

      <%= f.text_field :city, placeholder: "City" %>

      <%= f.text_field :state, placeholder: "State" %>

      <%= f.text_field :zipcode, placeholder: "Zipcode" %>

      <%= f.email_field :email, placeholder: "Email" %>

      <%= f.password_field :password, placeholder: "Password" %>

      <%= f.password_field :password_confirmation, placeholder: "Re-type Password" %>

      <%= f.submit "Signup" %>
<% end %>