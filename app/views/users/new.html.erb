<div class="page-header">
      <h1>Register</h1>
</div>
<br>

<%= form_for@user, :html => {class: "form"}, url: create_user_path do |f| %>

      <% flash.each do |key,value|  %>
        <div class="<%= key %>" > <%= value %> </div>
      <% end %>
      <div class="form-group">
            <%= f.text_field :username, placeholder: "Username", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.text_field :address, placeholder: "Street Address", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.text_field :city, placeholder: "City", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.text_field :state, placeholder: "State", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.text_field :zipcode, placeholder: "Zipcode", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>
      </div>
      <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Re-type Password", class: 'form-control' %>
      </div>

      <%= f.submit "Signup", class: 'btn btn-primary' %>
<% end %>